{
  "name": "bfx-report-electron",
  "version": "0.1.0",
  "description": "Reporting tool",
  "author": "bitfinex.com",
  "main": "index.js",
  "private": true,
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "standard": "^11.0.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "after"
    ]
  },
  "scripts": {
    "dist-win": "electron-builder build --win",
    "dist-linux": "electron-builder build --linux",
    "dist-mac": "electron-builder build --mac",
    "electron": "electron .",
    "test": "standard"
  },
  "build": {
    "extends": null,
    "asar": false,
    "productName": "bfx-report",
    "appId": "bitfinex.report.com",
    "files": [
      {
        "from": ".",
        "to": ".",
        "filter": [
          "bfx-report",
          "bfx-report-ui/build",
          "node_modules",
          "index.js",
          "server.js",
          "package.json"
        ]
      },
      {
        "from": "./build",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "artifactName": "${productName}-${version}-osx.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${arch}-linux.${ext}",
      "description": "Reporting tool",
      "maintainer": "<bitfinex.com>",
      "target": [
        "zip",
        "deb",
        "rpm"
      ]
    },
    "win": {
      "target": [
        "zip",
        "dir"
      ],
      "publisherName": "Reporting tool"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
